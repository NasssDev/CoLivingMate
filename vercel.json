{
  "version": 2,
  "builds": [
    {
      "src": "/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "/frontend/dist"
      }
    },
    {
      "src": "/app/**/*",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}